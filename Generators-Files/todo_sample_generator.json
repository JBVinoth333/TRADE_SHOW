{
    "generators": {
        "todo_id": [
            {
                "type": "dynamic",
                "generatorOperationId": "getTodos",
                "dataPath": "$.response.body:$.data[0].id"
            }
        ],
        "active_todo_ids": [
            {
                "type": "dynamic",
                "generatorOperationId": "getTodos",
                "dataPath": "$.response.body:$.data[*].id",
                "params": {
                    "completed": false
                }
            }
        ],
        "completed_todo_ids": [
            {
                "type": "dynamic",
                "generatorOperationId": "getTodos",
                "dataPath": "$.response.body:$.data[*].id",
                "params": {
                    "completed": true
                }
            }
        ],
        "todo_title": [
            {
                "type": "static",
                "value": "Complete project documentation"
            }
        ],
        "todo_status_open": [
            {
                "type": "static",
                "value": "OPEN"
            }
        ],
        "todo_status_closed": [
            {
                "type": "static",
                "value": "CLOSED"
            }
        ],
        "todo_priority_high": [
            {
                "type": "static",
                "value": 1
            }
        ],
        "todo_priority_medium": [
            {
                "type": "static",
                "value": 2
            }
        ],
        "todo_is_active": [
            {
                "type": "static",
                "value": true
            }
        ],
        "todo_is_inactive": [
            {
                "type": "static",
                "value": false
            }
        ],
        "created_todo_id": [
            {
                "type": "reference",
                "ref": "$.response.body:$.id"
            }
        ],
        "created_todo_title": [
            {
                "type": "reference",
                "ref": "$.response.body:$.title"
            }
        ],
        "created_todo_completed": [
            {
                "type": "reference",
                "ref": "$.response.body:$.completed"
            }
        ],
        "request_todo_id": [
            {
                "type": "reference",
                "ref": "$.input.path:$.id"
            }
        ],
        "request_todo_title": [
            {
                "type": "reference",
                "ref": "$.input.body:$.title"
            }
        ],
        "request_todo_completed": [
            {
                "type": "reference",
                "ref": "$.input.body:$.completed"
            }
        ],
        "query_param_todo_id": [
            {
                "type": "reference",
                "ref": "$.input.query:$.id"
            }
        ],
        "generate_timestamp": [
            {
                "type": "remote",
                "generatorMethod": "com.example.TodoDataGenerator.generateTimestamp"
            }
        ],
        "generate_uuid": [
            {
                "type": "remote",
                "generatorMethod": "com.example.TodoDataGenerator.generateUUID"
            }
        ],
        "generate_random_todo_id": [
            {
                "type": "remote",
                "generatorMethod": "com.example.TodoDataGenerator.generateRandomTodoId",
                "params": {
                    "min": "1",
                    "max": "10000"
                }
            }
        ],
        "generate_formatted_date": [
            {
                "type": "remote",
                "generatorMethod": "com.example.TodoDataGenerator.generateFormattedDate",
                "params": {
                    "format": "yyyy-MM-dd'T'HH:mm:ss'Z'",
                    "timezone": "UTC"
                }
            }
        ]
    }
}
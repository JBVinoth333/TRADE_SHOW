{
    "generators": [
        {
            "type": "dynamic",
            "name": "departments",
            "generatorOperationId": "support.Department.getDepartments",
            "params": {
                "isEnabled": "true"
            },
            "dataPath": "$.response.body:$.data[*].id"
        },
        {
            "type": "dynamic",
            "name": "contact",
            "generatorOperationId": "support.Contact.createContact",
            "dataPath": "$.response.body:$.id"
        },
        {
            "type": "dynamic",
            "name": "ticket",
            "generatorOperationId": "support.Ticket.createTicket",
            "params": {
                "subject": "Test Ticket with Comments",
                "departmentId": "$departments.value",
                "contactId": "$contact.value",
                "description": "This ticket is created for generator test with comments."
            },
            "dataPath": "$.response.body:$.id"
        },
        {
            "type": "dynamic",
            "name": "ticket_comment_1",
            "generatorOperationId": "support.Ticket.addComment",
            "params": {
                "ticketId": "$ticket",
                "content": "First comment for the ticket."
            },
            "dataPath": "$.response.body:$.id"
        },
        {
            "type": "dynamic",
            "name": "ticket_comment_2",
            "generatorOperationId": "support.Ticket.addComment",
            "params": {
                "ticketId": "$ticket",
                "content": "Second comment for the ticket."
            },
            "dataPath": "$.response.body:$.id"
        }
    ]
}
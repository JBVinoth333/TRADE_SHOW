{
  "agent_instruction": {
    "description": "All dependencies for a generator must be included in the same generator array under a single generator group. This ensures that the generator and its dependencies are defined together for clarity and maintainability.",
    "rule": "Use the structure: { 'generators': { '<generator_name>': [ { ...dependencies and generator configs... } ] } } for all generator definitions.",
    "example": {
      "generators": {
        "ticket": [
          { "type": "dynamic", "generatorOperationId": "support.Department.getDepartments", "dataPath": "$.response.body:$.data[*].id", "params": { "isEnabled": "true" } },
          { "type": "dynamic", "generatorOperationId": "support.Contact.createContact", "dataPath": "$.response.body:$.id" },
          { "type": "dynamic", "generatorOperationId": "support.Ticket.createTicket", "params": { "subject": "Test Ticket", "departmentId": "$departments.value", "contactId": "$contact.value", "description": "Test" }, "dataPath": "$.response.body:$.id" },
          { "type": "dynamic", "generatorOperationId": "support.Ticket.addComment", "params": { "ticketId": "$ticket", "content": "First comment" }, "dataPath": "$.response.body:$.id" },
          { "type": "dynamic", "generatorOperationId": "support.Ticket.addComment", "params": { "ticketId": "$ticket", "content": "Second comment" }, "dataPath": "$.response.body:$.id" }
        ]
      }
    }
  }
}

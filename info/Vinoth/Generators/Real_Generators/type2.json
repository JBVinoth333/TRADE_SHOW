{
    "generators": {
        "ticket_id": [
            {
                "type": "dynamic",
                "generatorOperationId": "support.Ticket.createTicket",
                "dataPath": "$.response.body:$.id",
                "name": "tickets"
            }
        ],
        "priority": [
            {
                "type": "static",
                "value": [
                    "HIGH",
                    "LOW",
                    "MEDIUM"
                ]
            }
        ],
        "created_at": [
            {
                "type": "remote",
                "generatorMethod": "org.example.TestData.generateTimestamp",
                "params": {
                    "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
                    "timezone": "UTC"
                }
            }
        ],
        "contact_name": [
            {
                "type": "reference",
                "ref": "$.response.body:$.data[0].name"
            }
        ],
        "assignee_id": [
            {
                "type": "conditional",
                "conditions": [
                    {
                        "when": {
                            "key": "$.input.body:priority",
                            "equals": "HIGH"
                        },
                        "then": {
                            "use": "$generators:#/generators/ticket_id"
                        }
                    },
                    {
                        "when": {
                            "key": "$.input.body:priority",
                            "equals": "LOW"
                        },
                        "then": {
                            "use": "$generators:#/generators/contact_name"
                        }
                    }
                ],
                "else": "$generators:#/generators/priority"
            }
        ]
    }
}
{
    "generators": {
        "department_id": [
            {
                "type": "dynamic",
                "generatorOperationId": "support.Department.createDepartment",
                "dataPath": "$.response.body:$.id",
                "name": "departments"
            }
        ],
        "department_cf": [
            {
                "type": "remote",
                "generatorMethod": "applicationDriver.rpc.desk.DynamicDataProvider.getCustomFieldSchema",
                "inputs": {
                    "moduleName": "Department"
                }
            }
        ],
        "department_type": [
            {
                "type": "remote",
                "generatorMethod": "applicationDriver.rpc.desk.DynamicDataProvider.getDynamicEnumValues",
                "inputs": {
                    "fieldName": "type",
                    "moduleName": "Department",
                    "orgId": "$.input.query:$.orgId"
                }
            }
        ],
        "primary_contact_for_department": [
            {
                "type": "reference",
                "ref": "../Contact/test_data_generation_configurations.json#/generators/contact_id"
            }
        ],
        "department_with_primary_contact": [
            {
                "type": "conditional",
                "conditions": [
                    {
                        "when": {
                            "key": "$.input.query:useExistingContact",
                            "equals": "true"
                        },
                        "then": {
                            "use": "../Contact/test_data_generation_configurations.json#/generators/contact_id"
                        }
                    }
                ],
                "else": "#/generators/department_id"
            }
        ]
    }
}